{% extends 'front_layout.twig' %}



    {% block stylesheets %}
        <link rel="stylesheet" href="{{ SESSION['site']['urlthemefront'] }}css/compiled/sign-in.css" type="text/css" media="screen" />
        <link rel="stylesheet" type="text/css" href="{{ SESSION['site']['urlthemefront'] }}css/lib/animate.css" media="screen, projection" />

    {% endblock %}


{% block bodyclass %}
    class=""
{% endblock %}

{% block navclass %}
    class="navbar navbar-inverse navbar-static-top"
{% endblock %}


{% block content %}



    <!-- Sign In Option 1 -->
    <div id="sign_in1">
        <div class="container">
            <div class="row">
                <div class="col-md-12 header">
                    <h4>Log in to your account</h4>
                    <p>
                        There are many variations of passages of Lorem alteration in some form  injected humour these randomised words .</p>

                    <div class="col-md-4 social">
                        <a href="#" class="circle facebook">
                            <img src="{{ SESSION['site']['urlthemefront'] }}img/face.png" alt="">
                        </a>
                        <a href="#" class="circle twitter">
                            <img src="{{ SESSION['site']['urlthemefront'] }}img/twt.png" alt="">
                        </a>
                        <a href="#" class="circle gplus">
                            <img src="{{ SESSION['site']['urlthemefront'] }}img/gplus.png" alt="">
                        </a>
                    </div>
                </div>

                <div class="col-sm-3 division">
                    <div class="line l"></div>
                    <span>or</span>
                    <div class="line r"></div>
                </div>

                <div class="col-md-12 footer">
                    <form class="form-inline">
                        <input type="text" placeholder="Email" class="form-control">
                        <input type="password" placeholder="Password" class="form-control">
                        <input type="submit" value="sign in">
                    </form>
                </div>

                <div class="col-md-12 proof">
                    <div class="col-md-6 remember">
                        <label class="checkbox">
                            <input type="checkbox"> Remember me
                        </label>
                        <a href="{{ SESSION['baseurl'] }}index/user/forgetpassword">Forgot password?</a>
                    </div>

                    <div class="col-md-6">
                        <div class="dosnt">
                            <span>Don’t have an account?</span>
                            <a href="{{ SESSION['baseurl'] }}index/user/signup">Sign up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sign In Option 2 -->
    <div id="sign_in2">
        <div class="container">
            <div class="section_header">
                <h3>Sign in <span>(option 2)</span></h3>
            </div>
            <div class="row login">
                <div class="col-sm-5 left_box">
                    <h4>Log in to your account</h4>

                    <div class="perk_box">
                        <div class="perk">
                            <span class="icos ico1"></span>
                            <p><strong>Lorem alteration</strong> in some form  injected humour these randomised words .</p>
                        </div>
                        <div class="perk">
                            <span class="icos ico2"></span>
                            <p><strong>There are many variations</strong> of passages of Lorem alteration in some form  injected humour these randomised words.</p>
                        </div>
                        <div class="perk">
                            <span class="icos ico3"></span>
                            <p><strong>Alteration in some form</strong> injected humour these randomised words.</p>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 signin_box">
                    <div class="box">
                        <div class="box_cont">
                            <div class="social">
                                <a href="#" class="circle facebook">
                                    <img src="{{ SESSION['site']['urlthemefront'] }}img/face.png" alt="">
                                </a>
                                <a href="#" class="circle twitter">
                                    <img src="{{ SESSION['site']['urlthemefront'] }}img/twt.png" alt="">
                                </a>
                                <a href="#" class="circle gplus">
                                    <img src="{{ SESSION['site']['urlthemefront'] }}img/gplus.png" alt="">
                                </a>
                            </div>

                            <div class="division">
                                <div class="line l"></div>
                                <span>or</span>
                                <div class="line r"></div>
                            </div>

                            <div class="form">
                                <form>
                                    <input type="text" placeholder="Email" class="form-control">
                                    <input type="text" placeholder="Password" class="form-control">

                                    <div class="forgot">
                                        <span>Don’t have an account?</span>
                                        <a href="sign-up.html">Sign up</a>
                                    </div>
                                    <input type="submit" value="sign in">
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% block javascript %}
        <script type="text/javascript" src="{{ SESSION['site']['urlthemefront'] }}js/index-slider.js"></script>
    {% endblock %}


{% endblock %}
